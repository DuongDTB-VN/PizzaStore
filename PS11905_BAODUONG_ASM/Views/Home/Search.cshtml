@model IEnumerable<PS11905_BAODUONG_ASM.Models.MonAn>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<section class="special-offers-sec new-block">
    <div class="special-offer-inr-block new-block">
        <div class="container-fluid">
            <div class="row">
                <form method="get" asp-action="Search" asp-controller="Home">
                    <label for="searchString">Tìm kiếm</label>
                    <input name="SearchString" id="searchString" value="" />
                    <input type="submit" class="btn btn-primary" value="Tìm kiếm" />
                </form>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Gia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phanloai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HinhAnh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MoTa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TrangThai)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="bodytb">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phanloai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HinhAnh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MoTa)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrangThai)
                                </td>
                                <td>
                                    <a>Làm gì đó với row ...</a>
                                    @*<a asp-action="Edit" asp-route-id="@item.MonAnID">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.MonAnID">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.MonAnID">Delete</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

